<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/coffee"
        android:scaleType="centerCrop"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feel At Home!"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/ico"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/icon"
        android:layout_below="@id/image"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee Shop"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_below="@id/image"
        android:layout_toRightOf="@id/ico"/>

    <ImageView
        android:id="@+id/call"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_call_black_24dp"
        android:layout_below="@id/ico"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/seattle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+27 12 368 1617"
        android:layout_toRightOf="@id/call"
        android:layout_below="@id/shop"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/holo_green_dark"/>

    <ImageView
        android:id="@+id/email"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_email_black_24dp"
        android:layout_below="@id/call"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.seattlecoffee.com"
        android:layout_toRightOf="@id/email"
        android:layout_below="@id/seattle"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/holo_green_dark"/>

    <ImageView
        android:id="@+id/house"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_add_location_black_24dp"
        android:layout_below="@id/email"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Johannesburg,South Africa"
        android:layout_toRightOf="@id/house"
        android:layout_below="@id/location"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/holo_green_dark"/>

    <ImageView
        android:id="@+id/time"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_access_time_black_24dp"
        android:layout_below="@id/house"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:paddingTop="15dp"/>

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hours:Open 24/7"
        android:layout_toRightOf="@id/time"
        android:layout_below="@id/open"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/holo_green_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Coffee Is a Pleasure!"
        android:layout_below="@id/hours"
        android:textSize="26sp"
        android:padding="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:fontFamily="sans-serif-condensed"/>


</RelativeLayout>